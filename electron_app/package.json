{
  "name": "druglit-summarizer-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.yourname.druglitsummarizer",
    "productName": "DrugLit Summarizer",
    "files": [
      "main.js",
      "renderer/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend/dist",
        "to": "backend_dist",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
